<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<meta name="description" content="Contributte DataGrid Demo">
	<meta name="keywords" content="DataGrid, Nette, PHP, Contributte">
	<meta name="author" content="Pavel Janda">

	<title>{ifset title}{include title|stripHtml} | {/ifset}DataGrid Sandbox</title>

	<link rel="stylesheet" type="text/css" href="{$basePath}/dist/app.css">
	<script defer src="{$basePath}/dist/app.js"></script>
</head>

<body>
	{snippet flashes}
		<div class="flash slide alert alert-{$flash->type}" n:foreach="$flashes as $flash">
			<div class="container">
				{$flash->message}
			</div>
		</div>
	{/snippet}

	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				{var $sections = [ 'Home', 'Columns', 'Filters', 'Actions', 'Group Actions', 'Row', 'Item Detail', 'Export', 'TreeView', 'Edit', 'Add', 'Localization']}
				{foreach $sections as $section}
					{var $link = str_replace(' ', '', $section)}
					<a n:class="$control->getName() === $link ? 'active', 'nav-item nav-link'" href="{link $link . ':default'}">{$section}</a>
				{/foreach}
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="example">
			{include content}
		</div>
		<div class="example-code">{include 'parts/code.latte'}</div>
	</div>
</body>
</html>
